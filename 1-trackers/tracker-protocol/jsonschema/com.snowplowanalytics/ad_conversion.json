{
	"$schema": "http://json-schema.org/schema#",
	"description": "Schema for an ad conversion event",
	"type": "object",
	"properties": {
		"conversion_id": {
			"type": "string"
		},
		"campaign_id": {
			"type": "string"
		},
		"advertiser_id": {
			"type": "string"
		},		
		"category": {
			"type": "string"
		},
		"action": {
			"type": "string"
		},
		"property": {
			"type": "string"
		},
		"cost_model": {
			"enum": ["cpa", "cpc", "cpm"]
		},
		"cost_if_cpa": {
			"type": "number",
			"minimum": 0
		},
		"initial_value": {
			"type": "number",
			"minimum": 0
		}
	},
	"minProperties": 1,
	"additionalProperties": false
}
