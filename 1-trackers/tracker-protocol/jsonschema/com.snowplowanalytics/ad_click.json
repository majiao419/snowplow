{
	"$schema": "http://json-schema.org/schema#",
	"description": "Schema for an ad click event",
	"type": "object",
	"properties": {
		"click_id": {
			"type": "string"
		},
		"impression_id": {
			"type": "string"
		},
		"zone_id": {
			"type": "string"
		},
		"banner_id": {
			"type": "string"
		},
		"campaign_id": {
			"type": "string"
		},
		"advertiser_id": {
			"type": "string"
		},
		"target_url": {
			"type": "string",
			"minLength": 1
		},
		"cost_model": {
			"enum": ["cpa", "cpc", "cpm"]
		},
		"cost_if_cpc": {
			"type": "number",
			"minimum": 0
		}
	},
	"required": ["target_url"],
	"additionalProperties": false
}
