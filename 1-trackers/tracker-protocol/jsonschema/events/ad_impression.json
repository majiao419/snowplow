{
	"$schema": "http://json-schema.org/schema#",
	"description": "Schema for an ad impression event",
	"type": "object",
	"properties": {
		"impression_id": {
			"type": "string"
		},
		"zone_id": {
			"type": "string"
		},
		"banner_id": {
			"type": "string"
		},
		"campaign_id": {
			"type": "string"
		},
		"advertiser_id": {
			"type": "string"
		},
		"cost_model": {
			"enum": ["cpa", "cpc", "cpm"]
		},
		"cost_if_cpm": {
			"type": "number",
			"minimum": 0
		}
	},
	"minProperties":1,
	"additionalProperties": false
}
